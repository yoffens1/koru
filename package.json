{
  "name": "koru-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "turbo": "latest",
    "prettier": "latest",
    "typescript": "latest"
  },
  "overrides": {
    "react-native": "0.76.3",
    "metro": "0.81.5",
    "metro-config": "0.81.5",
    "metro-resolver": "0.81.5",
    "metro-runtime": "0.81.5"
  },
  "packageManager": "npm@10.0.0"
}