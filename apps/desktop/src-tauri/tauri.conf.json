{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "koru",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8081",
    "beforeDevCommand": "pnpm --filter @koru/mobile dev",
    "beforeBuildCommand": "pnpm --filter @koru/mobile build"
  },
  "app": {
    "windows": [
      {
        "title": "Koru",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
