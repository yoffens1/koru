{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@koru/shared": ["../../packages/shared/src"],
      "@koru/shared/*": ["../../packages/shared/src/*"],
      "@koru/ui": ["../../packages/ui/src"],
      "@koru/ui/*": ["../../packages/ui/src/*"],
      "@koru/database": ["../../packages/database/src"],
      "@koru/database/*": ["../../packages/database/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src-tauri", "dist"]
}
